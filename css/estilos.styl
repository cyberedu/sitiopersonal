body 
    background-color #f8f8f8

#wrap
    background-color #f8f8f8

header
    width 100%
    position relative
    background-color #83aaaa
    text-align center
    padding 1em 0
    display block
    z-index 10
    a 
        text-decoration none
    nav
        position absolute
        top 0
        right 0
        margin 0
        padding-top 25px
        ul 
            margin 0
            padding 0
            list-style none
            background-color green
            width 100%
            li
                float left
                position relative
                margin-right 40px
                padding 0
                background-color blue
                opacity 0.5
                a
                    display block
                    width 100%
                    height 100%
            li.twitter
                background url('../img/twitter.png')
                display block
                background-repeat none
                width 32px
                height 22px
                &:hover
                    opacity 1
            li.github
                background url('../img/github.png')
                display block
                background-repeat none
                width 15px
                height 27px
                opacity 0.5
                &:hover
                    opacity 1


#main 
    position relative
    margin-top 100px
    background-color #f8f8f8
    text-align center
    figure
        position relative
        display inline-block
    p 
        font-family 'Lato' sans-serif
        color #777
        font-weight 300
        padding 0 15%
        font-size 2.1em
        line-height 1.5em
        span 
            color #8ac5c5
    #working
        width 75%
        margin 0 auto
        margin-top 100px
        text-align left
        overflow hidden
        h2
            font-family 'Lato' sans-serif
            font-size 1em
            text-transform uppercase
            color #868686
            border-bottom 1px solid #868686
            padding-bottom 1em
            letter-spacing 0.5em
            margin-bottom 30px
        figure
            margin-top 20px
            display inline-block
            position relative
            float left
            img
                width 100%
        article
            margin 0
            overflow hidden
            padding 10px 25px 0 50px
            p
                display inline-block
                padding 0
                float left
                font-family 'Lato' sans-serif
                font-weight 300
                font-size 1em
                color #868686
    #proyectos
        width 75%
        margin 0 auto
        margin-top 50px
        overflow hidden
        text-align left
        h2
            font-family 'Lato' sans-serif
            font-size 1em
            text-transform uppercase
            color #868686
            border-bottom 1px solid #868686
            padding-bottom 1em
            letter-spacing 0.5em
        ul
            margin-top 30px
            padding-left 0
            text-align center
            li
                display inline-block
                list-style none
                padding 0
                margin-right 10%
                margin-bottom 40px
                border-radius 10px
                border 10px solid #e5e5e5
                img
                    width 100%
            li.ultimo
                margin-right 0